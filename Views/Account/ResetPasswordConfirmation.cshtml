@{
    Layout = "_Layout";
    ViewData["Title"] = "Password Confirmation";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<div class="uk-section uk-section-muted uk-flex uk-flex-middle uk-animation-fade" uk-height-viewport>
    <div class="uk-width-1-1">
        <div class="uk-container">
            <div class="uk-grid-margin uk-grid uk-grid-stack" uk-grid>
                <div class="uk-width-1-1@s">
                    <div class="uk-margin uk-width-1-2@m uk-margin-auto">
                        <h3 style="color:#2c5702 !important;" class="uk-text-center">Your password has been reset.</h3>
                        <hr />
                        <div id="captcha-result" class="clear">
                            <p class="uk-text-center">
                                Please <a asp-route-area="Account" asp-controller="Account" asp-action="Login">Click here to log in</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

